<section class="feedback" id="feedback">
  <div class="feedback__wrapper">
    <div class="feedback__content">
      <div class="feedback__contacts-info">
        <h2 class="base-title feedback__section-header">Contacts</h2>
        <a
          href="mailto:1@dlux.services"
          class="base-title base-link feedback__cont-email"
          >1@dlux.services</a
        >
        <a
          href="tel:+18143511265"
          class="base-title base-link feedback__cont-phone"
          >+18143511265</a
        >
      </div>
      <form
        action="#"
        method="post"
        id="requestForm"
        class="feedback__form form"
      >
        <h3 class="base-title form__title">
          Send <span class="green-part">a request</span>
        </h3>
        <div class="form__group">
          <input
            type="text"
            id="name"
            name="name"
            class="form__area"
            placeholder=""
          />
          <label for="name" class="form__label">Name</label>
        </div>
        <div class="form__group">
          <input
            type="text"
            id="company"
            name="company"
            class="form__area"
            placeholder=""
          />
          <label for="company" class="form__label">Company</label>
        </div>
        <div class="form__group">
          <input
            type="tel"
            id="tel"
            name="phone"
            class="form__area"
            placeholder=""
          />
          <label for="tel" class="form__label">Callback phone number</label>
        </div>
        <div class="form__group">
          <span class="form__area form__datepicker-toggle-area">
            When is a good time to call
            <svg class="form__datepicker-toggle-button" width="24" height="24">
              {{ sprite.svg('common', 'Calendar_Week', 24, 24) }}
            </svg>
            <input
              type="date"
              id="dateInput"
              class="form__datepicker-input"
              name="calltime"
              required
            />
          </span>
        </div>
        <div class="form__group">
          <input
            type="email"
            id="email"
            name="email"
            class="form__area"
            placeholder=""
          />
          <label for="email" class="form__label">Email</label>
        </div>
        <div class="form__group">
          <textarea
            id="textarea"
            name="textarea"
            rows="2"
            class="form__area form__text-area"
            placeholder=""
          ></textarea>
          <label for="textarea" class="form__textarea-label form__label"
            >What can we help you with?</label
          >
        </div>
        <div class="form__group form__select-wrapper">
          <svg class="form__select-caret" width="24" height="24">
            {{ sprite.svg('common', 'Caret_Down', 24, 24) }}
          </svg>
          <select
            name="select"
            id="select"
            class="form__area form__select-area"
          >
            <option value="" disabled selected hidden>
              How did you find us?
            </option>
            <option value="1" class="form__select-option">Social media</option>
            <option value="2" class="form__select-option">TV</option>
            <option value="3" class="form__select-option">From a friend</option>
          </select>
        </div>
        <div class="form__group">
          <label for="checkbox" class="form__checkbox-container">
            <input
              type="checkbox"
              id="checkbox"
              class="form__checkbox"
              checked
            />
            <span class="form__checkbox-custom"></span>
            <span class="form__agreement"
              >I agree with the personal data processing policy</span
            >
          </label>
        </div>
        <button class="base-btn form__btn" type="submit">Send a request</button>
      </form>
    </div>
  </div>
</section>
